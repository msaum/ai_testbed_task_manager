{
  "$schema": "https://json.schema.store/claude-code-settings.json",
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(bd:*)",
      "Bash(python3:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(npm:*)",
      "Bash(make:*)",
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "Task(*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git check-ignore:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "SessionStart",
        "hooks": [
          {
            "type": "command",
            "command": "cd /Users/msaum/ai_testbed_task_manager && bd prime 2>/dev/null || echo 'Beads not initialized'",
            "statusMessage": "Initializing beads session"
          }
        ]
      }
    ]
  }
}
